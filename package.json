{
  "name": "pokemayne-recorder",
  "version": "1.0.0",
  "type": "module",
  "description": "Advanced e-commerce automation with stealthy recording and inventory monitoring",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "record": "node src/recorder.js",
    "monitor": "node src/monitor.js",
    "api": "node src/api/server.js",
    "ui": "cd ui && npm start",
    "ui:build": "cd ui && npm run build",
    "ui:install": "cd ui && npm install",
    "dev:api": "nodemon src/api/server.js",
    "dev:ui": "cd ui && npm start",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "stop:api": "pkill -f \"node src/api/server.js\" || true",
    "stop:ui": "pkill -f \"cd ui && npm start\" || true",
    "stop:dev:api": "pkill -f \"nodemon src/api/server.js\" || true",
    "stop:dev:ui": "pkill -f \"cd ui && npm start\" || true",
    "stop:record": "pkill -f \"node src/recorder.js\" || true",
    "stop:monitor": "pkill -f \"node src/monitor.js\" || true",
    "stop:full": "npm run stop:api && npm run stop:ui && npm run stop:dev:api && npm run stop:dev:ui && npm run stop:record && npm run stop:monitor",
    "test": "jest --passWithNoTests",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "build": "npm run lint && npm run test && npm run ui:build",
    "setup": "npm install && npm run ui:install && npx playwright install && mkdir -p logs recordings configs monitor-data",
    "start:full": "npm run ui:build && npm run api"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "https-proxy-agent": "^7.0.2",
    "http": "^0.0.1-security",
    "inquirer": "^8.2.6",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.3",
    "ora": "^5.4.1",
    "playwright": "^1.40.0",
    "playwright-extra": "^4.3.0",
    "proxy-agent": "^6.3.1",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "random-useragent": "^0.5.0",
    "socket.io": "^4.7.4",
    "socks-proxy-agent": "^8.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "keywords": [
    "automation",
    "e-commerce",
    "playwright",
    "stealth",
    "recorder",
    "inventory",
    "monitoring",
    "pokemon",
    "walmart"
  ],
  "author": "Pokemayne Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
